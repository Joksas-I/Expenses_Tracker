@model ExpensesTracker.Models.Expense

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4 offset-3">
                        <label asp-for="PurchasedItem"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="AmountSpent"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-2">
                        <input asp-for="PurchasedItem" class="form-control"/>
                        <span asp-validation-for="PurchasedItem" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="AmountSpent" class="form-control" />
                        <span asp-validation-for="AmountSpent" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row text-center">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create"/>
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" />}
}

